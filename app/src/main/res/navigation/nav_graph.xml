<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="uz.hilol.paygambarlartarixi.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="uz.hilol.paygambarlartarixi.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_readerFragment"
            app:destination="@id/readerFragment" />
    </fragment>

    <fragment
        android:id="@+id/appsFragment"
        android:name="uz.hilol.paygambarlartarixi.ui.apps.AppsFragment"
        android:label="AppsFragment"
        tools:layout="@layout/fragment_apps" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="uz.hilol.paygambarlartarixi.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/readerFragment"
        android:name="uz.hilol.paygambarlartarixi.ui.reader.ReaderFragment"
        android:label="ReaderFragment"
        tools:layout="@layout/fragment_reader" />
</navigation>